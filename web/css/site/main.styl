#menu-wrap {
	visibility hidden
	position fixed
	display flex
	opacity 0
	left 0
	top 0
	right 0
	bottom 0
	background rgba(0, 0, 0, 0.6)
	z-index 99
	align-items center
	justify-content center
	flex-direction column
	border-radius 20px
	transition(all 0.3s ease-out)

	.menu-close {
		position absolute
		right -15px
		top -15px
		padding 5px
		background #d8af3a
		cursor pointer
		border-radius 50%

		&:hover {
			img {
				animation(icon 0.4s linear)
			}
		}
	}

	&.active {
		visibility visible
		opacity 1

		.menu-wrap {
			display grid
		}
	}

	.menu-top {
		font-size 18px
		color #d8af3a
		padding 10px
		width 800px
		grid-column 1 / 4
		display flex
	}

	.menu-wrap {
		position relative
		grid-template-columns 1fr 1fr 1fr
		background #243044
		padding 10px
		display none

		.menu-section {
			display flex
			flex-direction column
			flex 1
			padding 10px
		}

		.menu-head {
			height 46px
			display flex
			width 100%
			align-items center
			justify-content center
			font-size 16px
			border solid 1px #d8af3a
			margin-top 10px

			&:hover, &.active {
				background #d8af3a
				color #000

				span {
					animation(icon 0.3s linear)
				}
			}
		}

		.menu-item {
			height 46px
			margin-top 10px
			border solid 1px rgba(255, 255, 255, 0.2)
			display flex
			width 100%
			align-items center
			justify-content center
			font-size 13.5px
			transition(all 0.2s ease-out)
			color #fff

			&:hover, &.active {
				background #a35e1e
				color #fff

				span {
					animation(icon 0.3s linear)
				}
			}
		}
	}
}


.card-container {
	padding 20px
}

.card {
	display grid
	grid-template-columns repeat(4, 1fr)
	grid-gap 30px

	.card-item {
		display flex
		position relative
		height 245px
		flex-direction column
		justify-content center
		padding-left 30px
		overflow hidden
		border solid 1px #ffcc00
		transition(all 0.2s ease-out)

		.card-h3 {
			height 40px
			font-size 1rem
			color #ffcc00
			transition(all 0.2s ease-out)
		}

		.card-h2 {
			font-size 1.8rem
			font-weight 600
			color #fff
			transition(all 0.4s ease-out)
		}

		&:hover {
			//transform scale(1.1)

			.card-h3 {
				margin-left -300px
			}

			.card-h2 {
				margin-left -300px
			}

			.card-close {
				visibility visible
				opacity 1
				backdrop-filter blur(5px)

				.card-h1 {
					margin-top 76px
				}
			}

			.card-lotto {
				visibility visible
				opacity 1
				backdrop-filter blur(5px)
			}
		}
	}

	.card-lotto {
		transition(all 0.6s ease-out)
		background rgba(0, 0, 0, 0.4)
		position absolute
		left 0
		top 0
		width 100%
		height 100%
		visibility hidden
		opacity 0
		display flex
		align-items center
		justify-content center

		img {
			cursor pointer
		}

	}

	.card-close {
		transition(all 0.6s ease-out)
		background rgba(0, 0, 0, 0.4)
		position absolute
		left 0
		top 0
		width 100%
		height 100%
		visibility hidden
		opacity 0

		.card-h1 {
			transition(all 0.4s ease-out)
			font-size 2rem
			font-weight 600
			text-align center
			margin-top -360px
			margin-bottom 20px
		}

		.btn {
			transition(all 0.2s ease-out)
			display block
			width 110px
			height 34px
			font-size 13px
			line-height 34px
			margin 0 auto
			text-align center
			border solid 1px #fff
			background none
			border-radius 0

			&:hover {
				background #fff
				color #000
			}
		}
	}
}

