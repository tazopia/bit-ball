a, button {
	color #ccc
	text-decoration none
	transition(all 0.2s ease-out)

	&:hover {
		color #fff
	}
}

@keyframes MOVE-BG {
	50% {
		background-position: right bottom;
	}
}

main {
	//min-height 100%
	position relative
	margin-bottom 20px
	//margin-top 150px
	//padding-bottom 60px

	.content {
		position relative
		//height 100%
	}

	&.page {
		figure {
			//display none
			position absolute
			width 100%
			//height 600px
			z-index 0
		}
	}

	.main-wrap {
		overflow hidden
		//background url(/images/main-bg2.png) no-repeat
		//background #000
		//box-shadow(inset 20px 20px 200px 2px rgba(0,0,0,0.3))
		background rgba(0, 0, 0, 0.5)
		border-radius 4px
		padding 40px 20px
		width 1295px
		margin-left 15px
		//backdrop-filter blur(10px)

		h3, h4 {
			height 24px
			color #fff
			font-size 16px
			margin-bottom 20px
			border-bottom solid 1px #727272

			span {
				color #e85202
				font-weight 900
			}
		}

		article {
			float left
			padding 0 15px
			font-size 14px

			li {
				overflow hidden
				span {
					display block
					height 35px
					line-height 35px
					float left

					&.date {
						width 24%
						em {
							color #fff
						}
					}

					&.home, &.away {
						width 33%
						color #fff
					}

					&.away {
						text-align right
					}

					&.vs {
						width 10%
						text-align center
					}
				}

				a {
					width 100%
					display block
					height 35px
					line-height 35px
					overflow hidden
					white-space nowrap
					text-overflow ellipsis
				}
			}
		}

		.game {
			width 46%
		}

		.event {
			width 27%
		}

		.notice {
			width 27%
		}

	}

	figure {
		text-align center
		display block
		height 560px
		width 1310px
		padding 0 15px
		margin 0 auto 10px auto
		overflow hidden
		//background url(/images/main_visual.jpg) right top no-repeat
		z-index -1


		video {
			margin-top -40px
			border-radius 4px
			width 100%
			object-fit contain
		}

		.video-bg {
			position absolute
			top 0
			width 100%
			height 100%
			background url(/images/patten_login_bg.png)
		}

		h1 {
			padding 140px 0 0 60px
			font-family 'Source Sans Pro', sans-serif
			font-size 38px
			font-weight 600
			color #fff
			line-height 1.4
		}

		p {
			color #000
			display table
			padding 4px 20px
			background rgba(255, 255, 255, 0.3)
			margin-bottom 4px
			transition(all 0.2s ease-out)

			&:hover {
				letter-spacing 1px
			}
		}
	}
}

