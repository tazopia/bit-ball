#clock {
	margin-top 4px
	width 220px
}

#btn-top {
	cursor pointer
	position fixed
	margin-left 50%
	left 670px
	bottom 30px
	width 50px
	height 50px
	line-height 50px
	border-radius 25px
	background #565658
	border solid 1px rgba(255, 255, 255, 0.1)
	text-align center
	text-shadow -1px -1px 1px rgba(0, 0, 0, 0.6)
	box-shadow(1px 1px 10px rgba(0, 0, 0, 0.6))
	transition(all 0.5s ease-out)
	opacity 0
	font-weight 600

	&:hover {
		background btn-info
	}

	&.show {
		opacity 1
	}
}