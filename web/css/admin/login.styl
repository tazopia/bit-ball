#login {
    background #2c363f


    .spinner {
        width 20px
        height 20px
        background-color #2ecc71
        animation(sk-rotate 1.6s infinite ease-in-out)
    }

    @-webkit-keyframes sk-rotate {
        0% {
            -webkit-transform: perspective(120px)
        }
        50% {
            -webkit-transform: perspective(120px) rotateY(180deg)
        }
        100% {
            -webkit-transform: perspective(120px) rotateY(180deg)  rotateX(180deg)
        }
    }

    @keyframes sk-rotate {
        0% {
            transform: perspective(120px) rotateX(0deg) rotateY(0deg);
            -webkit-transform: perspective(120px) rotateX(0deg) rotateY(0deg)
        }
        50% {
            transform: perspective(120px) rotateX(-180.1deg) rotateY(0deg);
            -webkit-transform: perspective(120px) rotateX(-180.1deg) rotateY(0deg)
        }
        100% {
            transform: perspective(120px) rotateX(-180deg) rotateY(-179.9deg);
            -webkit-transform: perspective(120px) rotateX(-180deg) rotateY(-179.9deg);
        }
    }

    .login-wrap {
        position absolute
        left 50%
        top 50%
        margin -200px 0 0 -153px // 창 크기에 따라서 틀려짐
        width 306px
        text-align center

        h1 {
            font-size 30px
            font-weight 100
            color #2ecc71
            font-family sans-serif
            line-height 1.3

            span {
                font-weight 900
                color #fff
            }
        }

        .login-form {
            padding 30px 0 20px 0
        }

        label {
            display block

            span {
                display inline-block
                width 43px
                height 43px
                line-height 43px
                font-size 20px
                vertical-align middle
                float left
                color #b4b8bc
                background #f7f7f7
                transition(none)
            }

            input {
                background #fff
                height 43px
                font-size 16px
                line-height 43px
                padding 0 10px
                color #96999f
                outline none
                width 263px
                border none
                placeholder(#ccc)

                &:focus + span {
                    color #2ea0d2
                }
            }

            &.label-top {
                span {
                    border-radius 3px 0 0 0
                    border-bottom solid 1px #e5e7e8
                }

                input {
                    border-left solid 1px #e5e7e8
                    border-bottom solid 1px #e5e7e8
                    border-radius 0 3px 0 0
                }
            }

            &.label-bottom {
                span {
                    border-radius 0 0 0 3px
                }

                input {
                    border-left solid 1px #e5e7e8
                    border-radius 0 0 3px 0
                }
            }
        }

        .btn-login {
            background #2abc68
            display block
            font-size 16px
            color #fff
            width 100%
            height 44px
            line-height 40px
            cursor pointer
            margin 20px 0 0 0
            font-family sans-serif

            &:hover {
                background darken(#2abc68, 20%)
            }
        }

        .copyright {
            color #899197
            margin-top 30px
            font-size 12px

            span {
                color #ccc
            }
        }
    }
}