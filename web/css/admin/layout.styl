border-dark = solid 1px rgba(0, 0, 0, 0.8) // 어두운 border
menu-point-color = #ea1717
min-width = 1400px
max-width = 1700px

color = #ddd
bgcolor = #222 //#2c363f

color01 = #ffd424
color02 = #4a98be
color03 = #e07a59
color04 = #8aa830
color05 = #ee3729
color06 = #00aaff
color07 = #9aba60

