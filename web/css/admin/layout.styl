html, body {
    width 100%
    height 100%
    font-family 'NanumGothic', 'Nanum Gothic', 'AppleSDGothicNeo', 'Malgun Gothic'
    font-size 13px
    background bgcolor
}

body {
    color color

    & > .page-wrap {
        min-width min-width
        max-width max-width
        min-height 100%
        height 100%
        position relative
    }
}

a {
    color color
    text-decoration none
}

a, .btn, td {
    transition(all 0.2s ease-out)
}

header {
    position fixed
    top 0
    background bgcolor
    width 100%
    line-height 46px
    text-align center
    box-shadow(0 0 3px #000)
    border-bottom 1px solid #000
    z-index 9

    h1 {
        width 200px
        color #fff
        font-size 18px
        font-weight 600
        float left
    }

    .btn {
        position absolute
        right 20px
        top 12px
        font-size 12px
        font-weight normal
        width auto
        height 24px
        line-height 24px
        padding 0 15px
    }
}

nav {
    min-width min-width
    max-width max-width
    position relative

    ul.gnb li {
        float left
        width 6.3%
        font-size 14px
        border-left border-light
        border-right border-dark
        overflow hidden
        background linear-gradient(to bottom, lighten(bgcolor, 10%), darken(bgcolor, 10%)) bgcolor

        a {
            display block
            border-top 2px solid transparent
        }

        &.on, &:hover {
            border-left-color rgba(255, 255, 255, 0.02)
            border-right-color #000
            a {
                border-top-color menu-point-color
                background darken(bgcolor, 50%)
            }
        }
    }

    ul.seller li {
        width 10%
    }
}

aside.side {
    position fixed
    top 48px
    width 200px
    height 100%
    overflow hidden
    background bgcolor
    z-index 1
    box-shadow(0 0 10px rgba(0,0,0,0.5))

    .side-wrap {
        position absolute
        overflow-y scroll
        height 100%
        top 0
        left 0
        padding-bottom 100px

        .side-scroll {
            width 200px
        }
    }

    ul {
        display block
        overflow hidden
    }

    .side-logo {
        text-align center
        padding 20px 0
    }

    .side-util { // 현재접속자, 알람설정
        padding 0 6px
        box-shadow(inset 0px 0px 10px 1px #111)

        li {
            width 50%
            float left
            padding 8px 2px

            .btn {
                display block
                width auto
                height 30px
                line-height 30px
                padding 0
                font-size 12px
                font-weight normal
            }
        }
    }

    .side-welcome {
        padding 50px 0
        text-align center

        span {
            color #fff
            font-weight 600
        }
        //background #444
    }

    .side-alarm {
        padding 10px 0
        border-top border-light
        border-bottom border-dark

        li {
            padding 4px 20px
            margin-bottom 1px

            a {
                color #888
            }

            span {
                font-weight 600
                float right
            }

            &.on {
                background #f4c600
                a {
                    color #444
                    font-weight 600

                    &:hover {
                        color #000
                    }
                }

                span {
                    color #000
                    font-weight 800
                }
            }
        }
    }

    .lnb {
        font-size 14px

        li {
            a {
                display block
                border-top border-light
                border-bottom border-dark
                border-left solid 3px transparent
                padding 0 20px
                height 40px
                line-height 38px

                em {
                    color #4c4c4c
                    text-shadow -1px -1px 1px #111

                    &.bul {
                        display inline-block
                        width 18px
                        text-align center
                        margin-right 10px
                    }

                    &.sub {
                        margin-top 12px
                        float right
                        font-size 18px
                    }
                }

                &:hover {
                    border-left-color #ce1b21
                    background #2c2c2c
                    color #fff
                }

                &.on {
                    .bul {
                        color #ffc414
                    }

                    .sub {
                        rotateXY(90deg)
                    }
                }

                > span i {
                    margin-left 10px
                }
            }

            &.on {
                background linear-gradient(to bottom, #363636 0%, #111 100%);
                color #fff

                > a {
                    border-left-color #ce1b21
                    .bul {
                        color #ffc414
                    }
                }
            }

            &.sub-toggle {
                > a:hover {
                    border-left-color transparent
                    background bgcolor
                }
            }

            ul.lnb-sub {
                background #2a2a2a
                overflow hidden

                li {
                    a {
                        padding-left 40px
                        border none
                        background #2a2a2a
                        border-bottom solid 1px #222

                        &:hover {
                            background #222
                            border-bottom solid 1px #1a1a1a
                        }
                    }

                    &.on {
                        border-left solid 3px #ce1b21

                        a {
                            background #333
                        }
                    }
                }

                &.lnb-3 {
                    background #2a2a2a
                    overflow hidden

                    li {
                        float left
                        border-left 1px solid #222
                        width 33.2%


                        a {
                            padding 0
                            text-align center
                            border none
                        }

                        &.on {
                            a {
                                color #ffc414
                                background #1a1a1a
                            }
                        }
                    }
                }

                &.lnb-2 {
                    background #2a2a2a
                    overflow hidden

                    li {
                        float left
                        border-left 1px solid #222
                        width 50%


                        a {
                            padding 0
                            text-align center
                            border none
                        }

                        &.on {
                            a {
                                color #ffc414
                                background #1a1a1a
                            }
                        }
                    }
                }
            }
        }

        &.sub-toggle:hover {
            border-left-color transparent
        }
    }
}

main {
    min-width min-width
    max-width max-width
    //min-height calc(100% - 100px)
    padding 48px 0 0 0
    //margin 0 0 0 200px
    position relative

    .main-wrap {
        margin-left 200px
        height 100%
        min-height 100%
        background #111
        padding-bottom 10px
        border-radius 0 0 10px 10px
    }

    h2 {
        height 46px
        line-height 46px
        padding 0 20px 0 40px
        font-size 16px
        font-weight 600
        background #1a1a1a
        box-shadow(inset 0 0 30px 2px #000)

        small {
            display inline-block
            font-weight normal
            font-size 14px
            color #666
            margin-right 10px
        }
    }

    .container {
        padding 20px
    }
}

footer {
    height 80px
    line-height 80px
    margin-left 200px
    background bgcolor
    font-size 12px
    color #888
    text-align center
    position relative

    span {
        color #eee
    }

    .btn-top {
        position absolute
        right 20px
        top 20px
        width 38px
        height 38px
        line-height 38px
        background #111
        border solid 1px #333
        border-radius 5px
        font-size 28px
        cursor pointer
    }
}