::-moz-selection {
    background color01
    color #000
}
::selection {
    background #e0ff11
    color #000
}

.btn {
    box-shadow(none)
    display inline-block
    height 30px
    line-height 30px
    border-radius 3px
    width 100px
    cursor pointer
    vertical-align middle
    margin 0 2px
    background #404040
    color color
    text-align center
    text-shadow 1px 1px 1px rgba(0,0,0,0.6)

    &.btn-cal {
        width auto
        height 23px
        line-height 23px
        padding 0 10px
        margin-left -5px
        border-radius 0 3px 3px 0
    }

    &:hover {
        background darken(#404040, 16%)
    }

    &.btn01 {
        background-color #3d86a9
        &:hover {
            background-color: darken(#3d86a9, 20%)
        }
    }

    &.btn02 {
        background-color #a03a19
        &:hover {
            background-color: darken(#a03a19, 30%)
        }
    }

    &.btn03 {
        background-color #487830
        &:hover {
            background-color: darken(#487830, 30%)
        }
    }

    &.btn04 {
        background-color #cc6d00
        &:hover {
            background-color: darken(#cc6d00, 30%)
        }
    }
}

img {
    vertical-align middle
}

section {
    label {
        margin-right 20px

        .title {
            margin-left -20px
            display inline-block
            width 60px
            text-align right
        }

        &.box {
            display inline-block
            width 120px
        }
    }

    input, select, textarea {
        background #353535
        border 1px solid #1c1c1c
        border-radius 2px
        padding 0 10px
        height 25px
        color #ccc
        box-shadow(inset 0 0 5px 2px rgba(0, 0, 0, .2))
        vertical-align middle

        &:focus {
            border-color #444
        }

        &.ng-invalid {
            border-color color03
        }

        &[disabled=disabled] {
            color #666
        }
    }

    input, textarea {
        &.num {
            text-align right
        }

        &.small {
            width 100px
        }

        &.large {
            width 260px
        }

        &.full {
            width 100%
        }

        &.cal {
            text-align center
            width 100px
        }
    }

    textarea {
        padding 10px
        line-height 1.6
    }

    .col7 {
        li {
            float left
            width 100px

            label {
                display block
                padding-bottom 6px
                text-align center
            }

            input[type=text] {
                width 60px
                text-align right
            }

        }
    }
}