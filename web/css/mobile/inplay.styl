#inplay {
	//display grid
	//overflow hidden
	//width 100%

	&.admin {
		height calc(100vh - 50px)
	}

	.columns {
		width 100%
	}

	.in-game.active {
		.in-league .btn {
			background #666
		}

		.in-team {
			border-color #ffcc00
		}
	}

	.in-game {
		width 100%
		position relative
		//height 140px
	}

	.in-league {
		width 100%
		display flex
		font-size 14px
		//padding-bottom 8px
		align-items center
		height 32px
		text-shadow 1px 1px 1px #000

		div {
			flex 1
			white-space nowrap
			overflow hidden
			text-overflow ellipsis
		}

		.sports-flag {
			display inline-block
			vertical-align middle
			margin-right 6px
		}

		.league-flag {
			display inline-block
			vertical-align middle
			margin-right 6px
			margin-left 20px
		}

		.cnt {
			height 16px
			line-height 16px
			display inline-block
			margin-left 20px
			vertical-align middle
			background-color orangered
			padding 0 1px
			border-radius 12px
		}

		.btn {
			position relative
			float right
			width 62px
			height 24px
			line-height 22px
			background #B8573E
			color #fff
			border-radius 4px

			em {
				position absolute
				top 1px
				left 1px
				right 1px
				bottom 1px
				//background rgba(0,0,0,0.4)
			}
		}
	}

	.in-team {
		display flex
		//flex-direction column
		flex-direction column
		justify-content center
		align-items center
		height 120px
		width 100%
		margin-bottom 6px
		background url(/images/inplay.png) center center no-repeat
		border solid 1px #444

		.time {
			text-align center
			color #ffcc00

			.minutes {
				color deepskyblue
			}
		}

		.in-score {
			display grid
			width 100%
			padding 16px 20px
			align-items center


			grid-template-columns 2fr 1fr 2fr

			.team {
				font-size 16px
				color #ffcc00
			}

			.team-home {
				text-align right
			}

			.score {
				font-size 28px
				color rgba(255, 255, 255, 0.4)
				font-weight 800
				text-align center
				min-height 32px
			}
		}

		.date {
			color rgba(255, 255, 255, 0.5)
		}

		&.active {
			border-color orangered
		}
	}

	// score

	.score-wrap {
		display flex
		height 160px
		background url(/images/inplay-bg.png) center center no-repeat
		box-shadow(inset 0 0 40px 2px #000)
		justify-content center
		align-items center
	}


	table.score-table {
		border-collapse separate
		border-spacing 1px

		&.baseball {
			th, td {
				width 40px
				padding 10px 0
			}
		}

		th {
			background #232938
			border solid 1px transparent
			padding 10px
			text-align center
			width 60px

			&.live {
				color #fec823
			}

			&.info {
				width 40px
			}
		}

		td {
			background #2f3853
			border solid 1px transparent
			padding 10px
			text-align center

			&.team {
				padding 10px 20px
				text-align left
				white-space nowrap
			}

			&.total {
				color #fec823
			}
		}
	}

	.game-team {
		background #fec823
		text-align center
		padding 10px 0
		color #000
		font-weight 600
		font-size 14px

		.vs {
			color rgba(0, 0, 0, 0.5)
		}
	}

	.tab-menu {
		display grid
		grid-gap 1px
		grid-template-columns repeat(6, 1fr)

		.tab-menu-item {
			text-align center
			background #2f3853
			border-bottom solid 2px #2f3853
			padding 17px 0 15px 0
			cursor pointer
			font-size 13px

			&:hover {
				background #232938
			}


			&.active {
				background #232938
				border-bottom-color #fec823
			}
		}
	}

	.market-wrap {
		margin-bottom 20px
		.market-group {
			margin-top 10px

			// 운영시에는 display: none 으로 해 주세요
			.market-id {
				display block
				float right
			}
		}

		.market-head {
			color #fff
			padding 10px
			background #232938
			font-size 14px
		}

		.market-team {
			display grid
			grid-gap 2px
			grid-template-columns repeat(2, 1fr)

			&.line3 {
				grid-template-columns 1fr 1fr 1fr
			}

			.team {
				border solid 1px #2f3853
				text-align center
				padding 10px
			}
		}

		.market-odds {
			display grid
			grid-gap 2px
			grid-template-columns 1fr 1fr // 두줄

			&.line3 {
				grid-template-columns 1fr 1fr 1fr // 세줄
			}

			.market-bet {
				display flex
				cursor pointer
				padding 10px
				background #2f3853
				transition(all 0.2s ease-out)

				&.min, &.max {
					background #2f3033 !important
					cursor default !important
				}

				&:hover, &.active {
					background-color #b8573e
					.odds {
						color #fff
					}

					&.down, &.up {
						background-color #b8573e
					}
				}

				&.down {
					background url(/images/odds-down.png) right bottom no-repeat #2f3853
				}

				&.up {
					background url(/images/odds-up.png) right top no-repeat #2f3853
				}

				.name {
					flex 1
				}

				.odds {
					color #fec823
					text-align right
				}
			}
		}
	}
}

.cart-inplay {
	.league {
		height auto
		line-height 1.6
		margin-bottom 10px
	}

	.team {
		float none !important
		padding 0 !important
		display grid
		grid-template-columns 1fr 30px
		grid-template-rows 1fr 1fr
		margin-bottom 10px
		padding-bottom 10px !important
		border-bottom solid 1px #888

		.home {
			grid-column 1/2
			grid-row 1/2
		}

		.away {
			grid-column 1/2
			grid-row 2/3
		}

		.vs {
			font-weight 800
			font-size 15px
			color gray
			grid-column 2/3
			grid-row 1/3
			align-self center
			justify-self end
		}
	}

	.market {

	}

	.odd {
		text-align right
		font-size 16px
		color #fec823
		font-weight 600
	}
}

.inplay-bet {
	.win {
		color #9aba60
	}
	.hit {
		box-shadow(none !important)
		color #4a98be
	}
	.lose {
		color #ee5f5b
	}
	.cancel {
		color #ee3729
	}

	td {
		line-height 1.6
	}
}