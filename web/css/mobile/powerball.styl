div.powerball {

	&.off {
		.bet-round {
			background #363537 !important
		}
	}

	.title {
		text-align center
		padding 10px 0
		color #ffb900

		.name {
			font-weight bold
		}

		.hd {
			color #00aaff
		}
	}


	.bet-wrap {
		display flex
		margin 0 -5px

		.bet-item {
			display flex
			justify-content center
			flex 1
			background #333
			margin 5px
			padding 10px 0
			border-radius 10px
			position relative

			&.on {
				background #ffb900
			}

			a {
				position absolute
				left 0
				right 0
				top 0
				bottom 0
			}

			&:first-child {
				.bet-round {
					background #005b96
				}
			}

			&:last-child {
				.bet-round {
					background #ea1717
				}
			}
		}

		.bet-round {
			transition(all 0.2s ease-out)
			display flex
			flex-direction column
			height 70px
			width 70px
			align-items center
			justify-content center
			border-radius 50%
			background #325422
			box-shadow(2px 2px 10px 0 rgba(0, 0, 0, 0.6))

			p {
				font-size 16px
				padding-bottom 10px
			}
		}
	}
}