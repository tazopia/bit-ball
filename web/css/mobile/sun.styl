.slotTitle {
	text-align center
	font-size 24px
	padding 20px 0
}

.sun-balance {
	padding 10px
	display grid
	grid-gap 10px
	grid-template-columns 1fr 1fr
}
.balance-item {
	background rgba(0, 0, 0, 0.6)
	border-radius 20px 0 20px 0
	border solid 1px rgba(255,255,255,0.4)
	position relative
}

.balance-reload {
	position absolute
	right -10px
	top -10px
	padding 5px
	background #ea1717
	cursor pointer
	border-radius 50%
}

.balance-flag {
	text-align center
	height 50px
	line-height 50px
	img {
		max-height 40px
		max-width 140px
	}
}
.balance-money {
	display flex
	padding 10px 20px
	align-items center

	.btn {
		border-radius 10px
		height 28px
		line-height 26px
		width 70px
	}

	span {
		flex 1
		text-align right
	}
}
.balance-error {
	text-align center
	padding 10px 0;
	color #ea1717
}