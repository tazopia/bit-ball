@keyframes MOVE-BG {
	from {
		background-position: center top
	}
	to {
		background-position: center bottom
	}
}

header {
	//position absolute
	width 100%
	height 50px
	background #3b0403
	//background url(/images/m/nav-bg.jpg) center top no-repeat
	animation(MOVE-BG 30s infinite alternate)
	background-size cover
	z-index 10

	#btn-menu, #btn-home {
		display inline-block
		width 50px
		height 50px
		margin 0 10px
		background url(/images/m/ico_menu.png) center center no-repeat
		vertical-align middle
	}

	#btn-home {
		background url(/images/m/ico_home.png) center center no-repeat
		float right
	}

	h1 {
		display inline-block
		height 50px
		line-height 50px
		font-size 22px
		font-weight 600
		text-shadow 0 0 1px 2px rgba(255,255,255,.4)
		vertical-align middle
		color #fff
	}
}
.user-info {
	//padding-top 42px
	width 100%
	height 30px
	line-height 30px
	background #222
	text-align right
	z-index 1

	&.fixed {
		position fixed
		top 0
	}

	em {
		margin-right 20px
	}
}

main {
	padding 0 10px 60px 10px
	position relative
	//top 72px
	//min-height 100%
}

footer {
	//top 72px
	clear both
	position relative
	background #000
	text-align center
	padding 20px 0 40px 0
	color #888
	p {
		font-size 12px
		margin-top 20px
		span {
			color #e85202
		}
	}

	&.game {
		padding-bottom 90px
	}
}

.paging {
	//background rgba(255,255,255,0.1)
	text-align center
	padding 28px 0
	margin 0 auto
	clear both

	a, em {
		display inline-block
		height 30px
		line-height 30px
		width auto
		padding 0
		text-align center

		border solid 1px rgba(255,255,255,0.4)

		&.prev {
			float left
			width 36%
			margin-right 10px
			//background gray-darker
			border-radius 15px
		}
		&.next {
			float right
			width 36%
			margin-left 10px
			//background gray-darker
			border-radius 15px
		}
	}

	em {
		border none
	}
}

#layout-wrap {
	background rgba(0, 0, 0, 0.8)
	width 100%
	height 100%
	position fixed
	z-index 998
	left 0
	top 0
}

#layout-box {
	top 50%
	width 100%
	text-align center
	position absolute
	z-index 999
	height 546px
	margin-top -286px
	margin-bottom 200px

	img {
		scaleAll(.85)
		display block
		margin 20px auto
	}
}

#btn-top {
	position fixed
	width 50px
	height 50px
	line-height 50px
	right 10px
	background #e85202
	border-radius 5px
	border solid 1px rgba(255, 255, 255, 0.1)
	transition(all 0.4s ease-out)
	text-align center
	font-weight 600
	color #000
	bottom 60px
	background rgba(255,255,255,0.6)
	opacity 0

	&.show {
		opacity 0.8
	}
}

.lv {
	display inline-block
	background #0063b1
	color #fff
	width 28px
	height 28px
	line-height 28px
	text-align center
	vertical-align middle
	border-radius 14px
}

#screen {
	z-index -1
	position fixed !important
	left 0
	right 0
	top 0
	bottom 0
	background url(/images/mobile-bg.jpg) center center no-repeat #000
	// filter blur(10px)
	background-size cover
	opacity 0.5
}