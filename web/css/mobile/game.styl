.table-wrap {
	//background rgba(255,255,255,0.1)
	padding 10px 0 0 0
	//border-top solid 1px rgba(255,255,255,0.05)
	//border-bottom solid 1px rgba(0,0,0,0.6)
}

table.table-game {
	table-layout fixed
	border-collapse separate
	border-spacing 2px

	tr.off {
		td.bet {
			background #222
		}
	}

	col.vs {

	}

	th, td {
		vertical-align middle
		text-align center
	}

	th {
		text-align left
		padding 10px 0 4px 0

		&.league {


			span {
				color #ffb900
			}

			p {
				color #ffd968

				display inline-block
				img {
					margin-right 4px
					vertical-align middle
				}
				em {
					color #fff
					font-weight 800
				}
			}

			.btn {
				position relative
				float right
				width 42px
				height 24px
				line-height 22px
				background #e85202
				color #fff
				border-radius 4px

				em {
					position absolute
					top 1px
					left 1px
					right 1px
					bottom 1px
					//background rgba(0,0,0,0.4)
				}
			}

			.rest-time {
				float right
			}
		}
	}

	td {
		padding 16px 10px
		font-size 13px
		background #222
		border-radius 4px
		//border-left solid 1px rgba(255,255,255,0.2)
		//border-top solid 1px rgba(255,255,255,0.2)
		//border-right solid 1px rgba(0,0,0,0.6)
		//border-bottom solid 1px rgba(0,0,0,0.6)

		.ellipses {
			width 100%
		}

		&.on {
			background #e85202 !important
			color #1B2338 !important

			.odds, &.draw, .color01, span.handy, span.over, span.under, p {
				color #fff !important
			}
		}

		&.bet {
			position relative
			//background #1f2226
			background #444

			a {
				position absolute
				left 0
				right 0
				top 0
				bottom 0
			}

			p {
				margin 0
				padding 0
				line-height 1
				margin-bottom 6px
			}

			&.draw {
				vertical-align bottom
				p {
					font-weight normal
					font-size 13px
				}
			}

			&.home {
				text-align left
				.odds {
					float right
				}
			}
			&.away {
				p {
					text-align right
				}
				.odds {
					float left
				}
			}

			.odds {
				color #d8af3a

				span {
					font-size 13px
					font-weight normal

					&.handy {
						color color04
					}
					&.over {
						//color #f03300
						background url(/images/icon_over.gif) left center no-repeat
						padding-left 20px
						font-weight normal
						color #f03300
						margin 0 6px
					}
					&.under {
						//color #0af
						background url(/images/icon_under.gif) right center no-repeat
						padding-right 20px
						font-weight normal
						color #0af
						margin 0 6px
					}
				}
			}
		}

		.odds, &.draw {
			font-size 14px
			font-weight 600

			&.bet {
				color #d8af3a
			}
		}

		&.draw.vs {
			font-size 13px
			font-weight normal
			color #ccc
		}

		&.score {
			box-shadow(inset 0 0 40px 1px #000)
			padding 0
		}
	}
}

table.table-list {
	table-layout auto

	th {
		text-align center
		font-weight 600
		background #222
		border-radius 4px
		padding 10px 4px
	}

	td {
		padding 10px 4px
		background #333
		.btn {
			white-space nowrap
			width auto
			height 28px
			line-height 28px
			padding 0 10px
			border-radius 4px
		}
	}
}

table.table-bet {
	.betBody:after {
		content ''
		display block
		height 20px
	}

	th {
		&.betTitle {
			background #222
			border-radius 4px
			padding 10px

			.code {
				font-weight 600
				margin-right 20px
			}

			.time {
				color color01
				float right
				font-weight normal

				.color02 {
					color color01
				}
			}
		}

		&.league {
			text-align left
			background none
			font-weight normal
			height 30px
			line-height 30px
			text-shadow 0 0 2px #000

			img {
				vertical-align middle
			}

			.date {
				float right
			}
		}
	}

	td.hit {
		box-shadow(inset 0 0 0 1px #fff)
	}

	td.betInfo {
		padding 0
		background none
		border none
		text-align left
		text-shadow 1px 1px 3px #000
		//background #222

		> em {
			color #fff
			display inline-block
			width 54%
			line-height 1.6

			&.rate, &.expMoney {
				width 44%
			}

			span {
				color #fff

				&.hit {
					color color03
				}
			}
		}

		.btn-box {
			padding 6px 0 0 0
			text-align right
		}
	}
}

#league {
	//background #444648
	////background url(/images/pattern03.png) #000
	position fixed
	top 0
	bottom 0
	left 100%
	width 260px
	height 100%
	transition(all .4s ease-out)
	overflow-y scroll
	overflow-x hidden
	z-index 8
	-webkit-overflow-scrolling touch
	padding-bottom 60px
	background rgba(0, 0, 0, 0.3)
	backdrop-filter blur(10px)

	&.on {
		left calc(100% - 200px)
	}

	img {
		vertical-align middle
	}

	li {
		display block
	}

	ul {
		display none

		&.on {
			display block
		}
	}

	p {
		width 200px
		padding 0 10px
		height 38px
		line-height 38px
		background #1B2338
		margin 1px 0
		font-size 13px

		.cnt {
			float right
			display block
			background-color #B8573E
			height 18px
			line-height 16px
			padding 0 7px
			border-radius 10px
			margin-top 10px
		}



		&.top {
			height 40px
			line-height 40px
			font-weight 600
			background #222

			.cnt {
				margin-top 12px
			}
		}

		&.title {
			height 49px
			line-height 49px
			color #fff
			text-align center
			font-size 18px
			font-weight 600
			background #e85202
		}

		&.league {
			display flex
			padding-left 16px
			background #2f3853

			.flag {
				width 36px
			}

			.name {
				flex 1
				white-space nowrap
				overflow hidden
				text-overflow ellipsis
			}
		}
	}
}

#league-btn-close {
	position absolute
	display block
	width 50px
	height 42px
	top 0
	background url(/images/m/ico_close.png) center center no-repeat
}

.zone {
	padding-bottom 60px
	.timer {
		padding 10px
		overflow hidden
		border solid 4px #f60
		border-radius 10px
		margin-bottom 10px
		background url(/images/zone/timer-bg.png) #000

		em {
			display inline-block
			height 40px
			line-height 40px
			font-size 16px
			color #aaa
		}

		.timer-box {
			display inline-block
			float right
		}

		.flip-clock-divider .flip-clock-label {
			display none
		}
	}
}

#zoneBox {
	//margin-top 20px
	padding-bottom 10px

	position relative
	overflow hidden

	> div {
		-o-transform-origin 0 0
		-ms-transform-origin 0 0
		-moz-transform-origin
		-webkit-transform-origin 0 0
		transform-origin 0 0
	}
}

#zoneButton {
	//margin 0 6px
	padding 4px 5px
	background #bbbbbb
	border solid 1px #acacac
	border-radius 4px
	text-align left

	a {
		display inline-block
		color #222
		font-weight 600
		text-shadow 1px 1px 1px #fff
		padding 0 10px
		height 22px
		line-height 20px
		text-align center
		border solid 1px transparent

		&.on, &:hover {
			background #197d5f
			border-color #116249
			border-radius 3px
			color #fff
			text-shadow none
		}
	}
}

#cart-wrap {
	//padding-top 26px
	position fixed
	left 0
	bottom 0
	width 100%
	//overflow hidden
	height 60px
	background #1a1a1a
	z-index 9
	//border-top solid 1px rgba(255,255,255,0.3)

	.cart-up {
		position absolute
		display block
		height 26px
		width 73px
		background url(/images/m/cart_up.png) center bottom no-repeat
		background-size auto 26px
		top -22px
		left 50%
		margin-left -36px
		z-index 10
	}

	.cart-down {
		position absolute
		display block
		height 26px
		width 73px
		background url(/images/m/cart_down.png) center bottom no-repeat
		background-size auto 26px
		top -22px
		left 50%
		margin-left -36px
		z-index 10
	}

	&.on {
		height 60%
		padding-bottom 60px

		#btn-cart {
			display none
		}

		#box-cart {
			display block
		}
	}

	&.zone.on {
		height 240px
		padding-bottom 60px

		#btn-cart {
			display none
		}

		#box-cart {
			display block
		}
	}

	#box-cart {
		display none
		height 100%
	}


	.cart-slip {
		position relative
		overflow-y auto
		overflow-x hidden
		height 100%
		-webkit-overflow-scrolling touch
	}

	.cart-item > div {
		position relative
		padding 10px
		border-top solid 1px #2F3853
		border-bottom solid 1px #2F3853
		background #1B2338
		overflow hidden

		p {
			height 24px
			line-height 24px
		}

		&.bonus {
			p {
				width 100%
				text-align center
				color #ee5f5b
			}
		}

		.team {
			img {
				vertical-align middle
			}
			float left
		}
		.odds {
			color #4a98be
			float right
			padding-right 36px
		}
		.btn {
			background #b90304
			position absolute
			right 10px
			top 12px
			width 20px
			height 20px
			line-height 20px
			padding 0
			text-align center
		}
	}

	.cart-odds {
		padding 10px
		border-top solid 1px rgba(255,255,255,0.1)
		border-bottom solid 1px rgba(0,0,0,0.3)

		p {
			height 24px
			line-height 24px

			span {
				float right

				em {
					color #d8af3a
				}

				input {
					width 160px
					height 20px
					background #000
					border 0
					padding 0
					border-radius 0
					outline 0
					text-align right
					color color01
				}
			}
		}
	}

	.cart-amount {
		padding 10px
		overflow hidden

		li {
			float left
			width 25%
			padding 1px
		}

		.btn {
			float left
			width 100%
			height 36px
			line-height 36px
			text-align center
			background #333
			border-radius 4px
		}
	}

	.cart-betting {
		background #1a1a1a
		padding 8px 6px 0 6px
		display block
		position fixed
		height 60px
		bottom 0
		left 0
		right 0
		z-index 998

		em {
			display inline-block
			background #000
			padding 0 10px
			height 26px
			line-height 26px
			font-size 12px
			font-weight normal
		}

		.btn-big.btn02 {
			//background url(/images/btn-bg.png) center top no-repeat
			//background-size cover
			//background url(/images/gold_bg.jpg) center bottom no-repeat //#59a735
			background #e85202
			color #fff
			font-weight 600
		}
	}
}

.ladder-result {
	background url(/images/ladder-result.png)
	display inline-block
	width 26px
	height 26px

	&.s1 {
		background-position 0 0
	}

	&.s2 {
		background-position -26px 0
	}

	&.s3 {
		background-position -52px 0
	}

	&.s4 {
		background-position -78px 0
	}
}

.lowhi-result {
	background url(/images/lowhi-result.png)
	display inline-block
	width 50px
	height 25px

	&.s1 {
		background-position 0 0
	}

	&.s2 {
		background-position -50px 0
	}

	&.s3 {
		background-position -100px 0
	}

	&.s4 {
		background-position -150px 0
	}
}

#timer {
	line-height 1
	width 150px
	text-align center
	text-shadow 0 1px 2px #000
	font-size 22px
	font-weight 600
	font-family 'Helvetica Neue', Helvetica, sans-serif
	div, span {
		display block
		width 30px
		height 36px
		line-height 36px
		background #333
		float left
		border-radius 4px
		margin-left 4px
		box-shadow(1px 1px 2px 1px rgba(0,0,0,0.7))
		color #ccc
	}

	> span {
		background none
		box-shadow none
		width 10px
		color #333
		margin-left 4px
	}
}