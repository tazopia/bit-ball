.card-container {
	padding-top 20px
}

.card {
	display grid
	grid-template-columns repeat(2, 1fr)
	grid-gap 10px

	.card-item {
		display flex
		position relative
		height 160px
		flex-direction column
		justify-content center
		padding-left 30px
		overflow hidden
		border solid 1px #ffcc00

		.card-close {
			visibility visible
			opacity 1
			//backdrop-filter blur(5px)

			.card-h1 {
				margin-top 40px
			}
		}

		.card-lotto {
			visibility visible
			opacity 1
			//backdrop-filter blur(5px)
		}
	}

	.card-lotto {
		position absolute
		left 0
		top 0
		width 100%
		height 100%
		visibility hidden
		opacity 0
		display flex
		align-items center
		justify-content center

		img {
			cursor pointer
		}

	}

	.card-close {
		position absolute
		left 0
		top 0
		width 100%
		height 100%
		visibility hidden
		opacity 0

		.card-h1 {
			font-size 1.6rem
			font-weight 600
			text-align center
			margin-top -360px
			margin-bottom 20px
		}

		.btn {
			display block
			width 110px
			height 34px
			font-size 13px
			line-height 34px
			margin 0 auto
			text-align center
			border solid 1px #d8af3a
			background #d8af3a
			color #fff
			font-weight 600
			text-shadow none
			border-radius 0
		}
	}
}

